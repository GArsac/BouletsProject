{%extends "BackBundle::layout.html.twig"%}



{%block title%}
    Page de creation d'incident
{%endblock%}



{% block content %}
    <div class="container">
        <h1>Page de creation d'incident </h1>

        <div id="container" class="col">

            <h1>Cretion d'incident</h1>

            <form method="POST" action="createincident">
                Titre :<br>
                <input type="text" class="form-control"  name="nom" placeholder="Titre"><br><br>
                Machine concerne√© :<br>
                <input type="text" class="form-control"  name="machine" placeholder="Machine"><br><br>
                Type: <br>
                <input type="text"  class="form-control" name="type" placeholder="Type"><br><br>
                Explication :<br>
                <textarea rows="4" cols="50" placeholder="Explication" name="text">

                </textarea>

