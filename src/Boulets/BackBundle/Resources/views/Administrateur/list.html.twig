{%extends "BackBundle::layout.html.twig"%}

{%block title%}
Liste de tous les utilisateurs
{%endblock%}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th>Nom</th><th>Pr√©nom</th>
                    </tr>
                    {%for u in utilisateurs%}
                        <tr>
                            <td>{{u.nom}}</td>
                            <td>{{u.mail}}</td>
                            <td>
                            <form method="post" action="{{ path('admin_profilOther') }}">
                                <input type="submit" value="Details">
                                <input type="hidden" name="id" value="{{ u.id }}">
                            </form>
                            </td>
                            <td>
                            <form method="post" action="{{ path('admin_delete') }}">
                                <input type="submit" value="Supprimer">
                                <input type="hidden" name="id" value="{{ u.id }}">
                            </form>
                            </td>
                        </tr>
                    {%endfor%}
                </table>
            </div>
        </div>
    </div>
{%endblock%}
