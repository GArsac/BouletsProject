{%extends "BackBundle::layout.html.twig"%}

{%block title%}
Liste des utilisateurs
{%endblock%}

{% block navContent %}
    {% if nom is not null %}
        <li><a href={{ path('admin_logout') }}><span class="glyphicon glyphicon-log-out"></span> DÃ©connexion
            </a></li>
    {% elseif nom is null %}
        <li><a href={{ path('login') }}><span class="glyphicon glyphicon-log-out"></span> Sign In
            </a></li>
        <li><a href={{ path('admin_create') }}><span class="glyphicon glyphicon-log-out"></span> Sign Up
            </a></li>
    {% endif %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th>Nom</th><th>Mail</th>
                    </tr>
                    {%for u in utilisateurs%}
                        <tr>
                            <td>{{u.nom}}</td>
                           <td>{{u.mail}}</td>
                            <td>
                                <form method="post" action={{ path('admin_details') }}>
                                    <input type="submit" class="btn btn-primary" value="Details">
                                    <input type="hidden" name="id" class="btn btn-primary" value="{{ u.id }}">
                                </form>
                            </td>
                            <td>
                                <form method="post" action={{ path('admin_deleteUser') }}>
                                    <input type="submit" class="btn btn-primary" value="Supprimer">
                                    <input type="hidden" name="id" class="btn btn-primary" value="{{ u.id }}">
                                </form>
                            </td>
                        </tr>
                    {%endfor%}
                </table>
            </div>
        </div>
    </div>
{%endblock%}