{%extends "BackBundle::layout.html.twig"%}

{%block title%}
    {% if user is defined %}
         Profil de {{ user.nom }}
        {% endif %}
{%endblock%}

{% block content %}
    <div class="container">


        {% if user is defined %}
            <h1>Nom</h1>
            {{ user.nom }}
            <h1>Mail</h1>
            {{ user.mail }}

            <form action={{ path('admin_logout') }}>
                <input type="submit" class="btn btn-primary" value="Se deconnecter" />
            </form>

            <form action="update">
                <input type="submit" class="btn btn-primary" value="Modifier votre profil " />
            </form>

            <form action="../salle/affiche">
                <input type="submit" class="btn btn-primary" value="DashBoard" />
            </form>

            <form action="../incident/affiche">
                <input type="submit" class="btn btn-primary" value="Les incidents" />
            </form>


            <form action="../machine/affiche">
                <input type="submit" class="btn btn-primary" value="Les machines" />
            </form>

        {%  endif%}

    </div>
{%endblock%}
