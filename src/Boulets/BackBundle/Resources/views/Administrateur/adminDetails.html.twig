{% extends "BackBundle::layout.html.twig" %}

{% block title %}
    {% if user is defined %}
        Profil de {{ user.nom }}
    {% endif %}
{% endblock %}

{% block navContent %}
    {% if nom is not null %}
        <li><a href={{ path('admin_logout') }}><span class="glyphicon glyphicon-log-out"></span> Déconnexion
            </a></li>
    {% elseif nom is null %}
        <li><a href={{ path('login') }}><span class="glyphicon glyphicon-log-out"></span> Sign In
            </a></li>
        <li><a href={{ path('admin_create') }}><span class="glyphicon glyphicon-log-out"></span> Sign Up
            </a></li>
    {% endif %}
{% endblock %}

{% block content %}

    <div class="container">

        {% if user is defined %}

            <div class="page-header">
                <h1> Détails de {{ user.nom }}

                    <form class="box" action={{ path('admin_create') }}><input class="btn " type="submit"
                                                                               value="Nouvel Administrateur"/>
                    </form>
                </h1>
            </div>

            <h2>Mail : {{ user.mail }}</h2>

            <form class=" col-md-3" action="{{ path('AllAdmin') }}">
                <input type="submit" class="btn  sub" value="Liste des administrateurs"/>
            </form>

            <form class=" col-md-3" action={{ path('front_allsalleaffiche') }}>
                <input type="submit" class="btn sub " value="DashBoard"/>
            </form>

            <form class=" col-md-3" action="{{ path('front_indexallincidents') }}">
                <input type="submit" class="btn  sub" value="Les incidents"/>
            </form>


            <form class=" col-md-3" action={{ path('front_machineall') }}>
                <input type="submit" class="btn sub " value="Les machines"/>
            </form>

        {% endif %}

    </div>
{% endblock %}
