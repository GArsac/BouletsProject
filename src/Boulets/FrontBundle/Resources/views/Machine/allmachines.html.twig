                    <h2> Adresse Ip : {{ m.ip }}, Nom de la machine : {{ m.nom }}</h2>
                </div>
                <div class="">

                    <p class=" col-md-4">
                    Le statue : {{ m.statut }}
                    </p>
                    <p class=" col-md-4">
                        Dans la salle : {{ m.salle }}

                    </p>
                    <form class="col-md-4" action="details/{{ m.id }}"><input type="submit" class="btn box" value="DÃ©tails"/>
                    </form>
                </div>
            </div>

        {% endfor %}


        <form action={{ path('back_machine_create') }}><input class="btn " type="submit" value="Nouvelle Machine"/>
        </form>


    </div>

{% endblock %}




