                <div>




                    <p class=" col-md-3">{{ m.id }}
                    </p>
                    <p class=" col-md-3">
                        Le statue : {{ m.statut }}
                    </p>
                    <p class=" col-md-3">
                        Dans la salle : {{ m.salle }}

                    </p>
                    <form class="col-md-3" action="details/{{ m.id }}"><input type="submit" class="btn box"
